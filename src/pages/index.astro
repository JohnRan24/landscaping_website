---
import Layout from '@layouts/Layout.astro';
import Hero from '@components/sections/Hero.astro';
import SplitPanel from '@components/sections/SplitPanel.astro';
import Features from '@components/sections/Features.astro';
import { featureLists } from '@data/features';
import heroImage from '../assets/images/home/ECR-img-2.jpg';
import styleGuideImage from '../assets/images/home/ECR-img-12.jpg';

const seoTitle = "ECR Landscape";
const seoDescription = "ECR Landscape Quality Landscape & Services.";

const heroContent = {
    title: 'The Foundation For Your Outdoor Space',
    description: 'ECR Landscape is always looking to help and improve the outdoor space around you. We are here to help you with all your needs.',
    buttons: [
        {
            text: 'Request a Free Quote',
            link: '/contact',
            target: '_self'
        }
    ],
    backgroundImage: heroImage,
    overlayOpacity: 0.2
}

const featuresSection = {
    eyebrow: "Work",
    title: "Everything You Need, Nothing You Don't",
    description: "ECR Landscape is specializes in these jobs.",
    features: featureLists.main.features
}

const FooterCta = {
    eyebrow: "Join The Community",
    title: ' Start Building With ECR Landscape Today',
    description: 'We are always easy to work with and always looking for new projects.',
    hideCta: false,
    button: {
        text: 'Contact Us',
        link: '/contact'
    }
}

const styleGuideSection = {
    eyebrow: "Design System",
    headline: "Consistent & Beautiful Work",
    image: {
        src: styleGuideImage,
        alt: "Featured image"
    }
}

---

<Layout footerCta={FooterCta} title={seoTitle} description={seoDescription}>
    <Hero content={heroContent} />
    <Features content={featuresSection} padding="base" background="light" />
    <SplitPanel content={styleGuideSection} imagePosition="right" background="light" padding="base" />
</Layout>